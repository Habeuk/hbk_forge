{{attach_library("hbk_cforge/menu-style")}}

<div class="menu-wrapper">
	<div class="logo">
		<a href="{{ front_page }}">{{ site_name }}</a>
	</div>
	<input type="checkbox" name="slider" id="menu-btn"/>
	<ul class="nav-links">
		<label for="menu-btn" class="menu-hamburger close-btn">
			<i class="fas fa-times"></i>
		</label>
		{% for item in items %}
			<li class="menu-element">
				{% if item.below %}
					<a class="desktop-item">{{ item.title }}</a>
					<input type="checkbox" class="showDrop" id="showDrop{{ loop.index }}"/>
					<label for="showDrop{{ loop.index }}" class="mobile-item">{{ item.title }}</label>

					<ul class="drop-menu">
						{% for subItem in item.below %}
							<li>
								<a href="{{ subItem.url }}">{{ subItem.title }}</a>
							</li>
						{% endfor %}
					</ul>
				{% else %}
					<a href="{{ item.url }}">{{ item.title }}</a>

				{% endif %}
			</li>
		{% endfor %}
	</ul>
	<label for="menu-btn" class="menu-hamburger menu-btn position-relative">
		<span class="position-absolute"></span>
	</label>
</div>
