{% set lib_name = "hbk_cforge/slider-style" %}
{% if cforge_lib_suffix %}
	{% set lib_name = lib_name ~ cforge_lib_suffix %}
{% endif %}
{{attach_library(lib_name)}}
<div class="cforge-slider-container">
	<div
		class="swiper">
		<!-- Additional required wrapper -->
		<div
			class="swiper-wrapper">
			<!-- Slides -->
			{% for slide in content.sliders %}
				{% if slide.image and slide.show_slide %}
					<div class="swiper-slide">
						<div class="mitor-hero-2 mitor-hero-2--text-left">

							{{slide.image}}
							<div class="hole">
								<svg version="1.1" viewbox="0 0 10 10">
									<path d="M0 0 Q5 0 10 0 7 3 10 10 5 10 0 10 0 5 0 0" fill=""/>
								</svg>
							</div>
							<div class="mitor-hero-content">
								<div class="container">
									<div class="row">
										<div class="mitor-card__body col-lg-6 py-5">
											<h3 class="mc-title h3">
												{{slide.title}}
											</h3>
											<div class="mc-description">
												{{slide.description.value | raw}}
											</div>
											{% if slide.link and slide.link_label %}
												<a href="{{slide.link}}" class="btn btn-wbu-background btn-outline-wbu-background text-light font-weight-bold px-5 ml-0 mt-5">{{slide.link_label}}</a>
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}

			{% endfor %}


		</div>
		<!-- controller -->
		<div class="swiper-button-next"></div>
		<div class="swiper-button-prev"></div>
	</div>
</div>
